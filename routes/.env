# ================================
# CONFIGURATION DU SERVEUR FLASK
# ================================
HOST=0.0.0.0
PORT=5005
DEBUG=False

# ================================
# CONFIGURATION DU LOGGING
# ================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ================================
# MODE DE FONCTIONNEMENT
# ================================
# MOCK_MODE=True  : Utilise des données simulées (pour les tests)
# MOCK_MODE=False : Utilise le scraping réel (pour la production)
MOCK_MODE=True

# ================================
# CONFIGURATION DU SCRAPING
# ================================
PROJECTS_PER_PAGE=10
MAX_RETRY_ATTEMPTS=3
REQUEST_TIMEOUT=10

# ================================
# CONFIGURATION DES HEADERS HTTP
# ================================
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# ================================
# LIMITES ET SÉCURITÉ
# ================================
MAX_PROJECTS_PER_REQUEST=1000
DEFAULT_PROJECT_COUNT=25

# ================================
# CONFIGURATION AVANCÉE (OPTIONNEL)
# ================================
# DATABASE_URL=sqlite:///data/scraper.db
# REDIS_URL=redis://localhost:6379/0
# SECRET_KEY=your-super-secret-key-here
# RATE_LIMIT_PER_MINUTE=60